<div class="section">
  <span class="card-title activator grey-text text-darken-4">Shorten URL</span>
  <div class="divider"></div>
</div>
<%= form_for(shorten_url, url: shorten_url_path, as: :shorten_url, html: {css: 'col s12', remote: true}) do |f| %>

  <div class="row">
    <div class="switch">
      <label>
        Off Custom
        <input type="checkbox" name="shorten_url[custom]" id="shorten_url_custom">
        <span class="lever"></span>
        On Custom
      </label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.text_field(:url) %>
      <%= f.label(:url) %>
    </div>
  </div>

  <div class="row" id="field_custom">
    <div class="input-field col s12">
      <%= f.text_field(:shorten) %>
      <%= f.label(:shorten) %>
    </div>
  </div>

  <div class="row">

  <button class="btn waves-effect waves-light blue" type="submit" name="action">Generate
    <i class="material-icons right">send</i>
  </button>

  </div>

<% end %>

<div class="row">
  <div class="section container">
    <div class="col s12">
      Your link : <span class="flow-text" id="result_url">...</span>
    </div>
  </div>
</div>
